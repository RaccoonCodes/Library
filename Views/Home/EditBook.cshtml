@model Book

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Edit Book</title>
    <meta name="viewport" content="width=device-width" />
    <link href="/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="/Styles.css" rel="stylesheet" />
</head>
<body>
    <div class="container text-white">
        <h2 class="text-center ">Edit Book</h2>
        
        <form method="post" asp-action="EditBook">
            <input type="hidden" asp-for="BookId" />
            <div class="form-group">
                <label>Title</label>
                <input type="text" class="form-control" asp-for="Title" required />
            </div>
            <div class="form-group">
                <label>Author</label>
                <input type="text" class="form-control" asp-for="Author" required />
            </div>
            <div class="form-group">
                <label>Edition</label>
                <input type="text" class="form-control" asp-for="Edition" required />
            </div>
            <div class="form-group">
                <label>Year</label>
                <input type="text" class="form-control" asp-for="Year" required />
            </div>
            
            <button type="submit" class="btn btn-primary my-2">Update</button>
        </form>
    </div>
</body>
</html>
